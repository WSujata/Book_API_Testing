			"name": "Create User",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate a random string\r",
							"var randomString = Math.random().toString(36).substring(2);\r",
							"\r",
							"// Generate a random email address\r",
							"var userEmail = \"jim\" + randomString + \"@gmail.com\";\r",
							"\r",
							"// Generate a random name\r",
							"var userName = \"jim\" + randomString;\r",
							"\r",
							"// Add the above data to environment variables\r",
							"pm.environment.set(\"email_env\", userEmail);\r",
							"pm.environment.set(\"name_env\", userName);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"//extract entire body\r",
							"var jsonData=JSON.parse(responseBody);\r",
							"\r",
							"//get id & create environment variable\r",
							"pm.environment.set(\"userid_env\",jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"{{name_env}}\",\r\n    \"gender\": \"female\",\r\n    \"email\": \"{{email_env}}\",\r\n    \"status\": \"active\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
